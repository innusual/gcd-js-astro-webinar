{
  "$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useImportType": "error"
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 80,
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "indentStyle": "space",
      "lineWidth": 80
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "all"
    }
  }
}